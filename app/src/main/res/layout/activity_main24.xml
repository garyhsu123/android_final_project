<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/xy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.23"
            android:text="遊戲人數:"
            android:textAlignment="center"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textview_play_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.30"
            android:text="5"
            android:textAlignment="center"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView_level"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="難度"
            android:textAlignment="center"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="379dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@android:color/holo_green_light"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_start"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:hint="0"
                android:textAlignment="center"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="122dp"
                android:layout_height="match_parent"
                android:text="~"
                android:textAlignment="center"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/textView_end"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="100"
                android:textAlignment="center"
                android:textSize="35sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView_who_guess"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:hint="現在輪到哪個玩家"
            android:textAlignment="center"
            android:textSize="28sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/background_dark">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/imageView_headpicture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.26" />

            </FrameLayout>

            <TextView
                android:id="@+id/textView_guess_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="210dp"
                android:paddingTop="12dp"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="50sp" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText_guess"
            android:layout_width="204dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="請猜一個數字"
            android:inputType="number" />

        <Button
            android:id="@+id/button_send_answer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="猜"
            android:textAlignment="center"
            android:textSize="40sp" />

    </LinearLayout>

</LinearLayout>
